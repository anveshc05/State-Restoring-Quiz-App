<div class="container" style="text-align: center"><h1>Welcome to the quizapp</h1></div>
<div class="container-fluid" style="text-align : center">
<% if current_user %>
	<%= link_to "Leaderboard", leaderboards_path, class: "btn btn-success" %>
	<% if current_user.admin==true %>
		<%= link_to "Admin Page", rails_admin_path , class: "btn btn-success" %>
	<% end %><br /><br />
	<%= link_to "Logout", destroy_user_session_path, method: :delete , class: "btn btn-success" %><br /><br />	
	<%= link_to "Start The Quiz Page", start_index_path, class: "btn btn-success" %><br /><br />
<% else %>
<%= link_to "Login", new_user_session_path , class: "btn btn-info" %><br /><br />
<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-info"  %><br /><br />
<% end %>
</div>
