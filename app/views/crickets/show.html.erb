
<form method="GET" action= "#">
  <div class="container">
  <div class="question">
  <span class="label label-warning"><%= @cricket.id %></span>
     <span class="question">
    <strong>Question:</strong>
    <%= @cricket.question %>
  </span>
  </div>
  <ol type="a">
  <% if @cricket.multicheck %>
    <span style="color:red">Multi correct question </span><br />
    <li>
    <div style="padding: 2em; border: 1px solid">
    <%= check_box_tag(:A) %>
    <%= label_tag(:A, @cricket.opta) %>
    </div>
      </li>
      <li>
          <div style="padding: 2em; border: 1px solid">
    <%= check_box_tag(:B) %>
    <%= label_tag(:B, @cricket.optb) %>
    </div>
      </li>
      <li>
          <div style="padding: 2em; border: 1px solid">
      <%= check_box_tag(:C) %><%= label_tag(:C, @cricket.optc) %>
      </li>
      <li>
          <div style="padding: 2em; border: 1px solid">
      <%= check_box_tag(:D) %><%= label_tag(:D, @cricket.optd) %>
      </li>
    </ol>
  <% else %>
      <span style="color:red">Single Correct type question</span><br />
    <li>
      <!-- <div class="choice"> -->
      <div style="padding: 2em; border: 1px solid">
      <input type="radio" name="m" value="A"><%= @cricket.opta %></input> 
      </div>
    </li>
    <li>
      <div style="padding: 2em; border: 1px solid">
      <input type="radio" name="m" value="B"><%= @cricket.optb %></input> 
      </div>
    </li>
    <li>
      <div style="padding: 2em; border: 1px solid">
      <input type="radio" name="m" value="C"><%= @cricket.optc %></input> 
      </div>
    </li>
    <li>
      <div style="padding: 2em; border: 1px solid">
      <input type="radio" name="m" value="D"><%= @cricket.optd %></input> 
      </div>
    </li>
  <% end %>
  <div class="container" style="text-align: center">
  <div class="btn btn-success">
  <input type="submit">
  </div>
  </div>

  <h3 style="text-align:center; color:red"> Current score: <%= @lbord.cricketscore %></p>
</form>
